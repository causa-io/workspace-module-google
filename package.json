{
  "name": "@causa/workspace-google",
  "version": "0.2.0",
  "description": "The Causa workspace module providing many functionalities related to GCP and its services.",
  "repository": "github:causa-io/workspace-module-google",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@causa/cli": ">= 0.3.3 < 1.0.0",
    "@causa/workspace": ">= 0.7.0 < 1.0.0",
    "@causa/workspace-core": ">= 0.6.0 < 1.0.0",
    "@google-cloud/apikeys": "^0.2.2",
    "@google-cloud/iam-credentials": "^2.0.4",
    "@google-cloud/pubsub": "^3.7.0",
    "@google-cloud/secret-manager": "^4.2.2",
    "@google-cloud/service-usage": "^2.2.2",
    "@google-cloud/spanner": "^6.10.1",
    "@google-cloud/storage": "^6.10.1",
    "class-validator": "^0.14.0",
    "firebase": "^9.22.1",
    "firebase-admin": "^11.9.0",
    "globby": "^13.1.4",
    "google-gax": "^3.6.0",
    "googleapis": "^118.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@types/uuid": "^9.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
